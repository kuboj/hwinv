<div class="row">
  <div class="span6 offset3">
    <%= form_for(@purchase) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :purchased_at %>
      <%= f.date_select :purchased_at %>
      <%= f.label :warranty_until %>
      <%= f.date_select :warranty_until %>
      <%= f.label :price %>
      <%= f.text_field :price %>
      <%= f.label :currency %>
      <%= f.text_field :currency %>
      <%= f.label :hardware_id %>
      <%= f.number_field :hardware_id %>
      <%= f.submit yield(:button_text), class: "btn btn-large btn-primary" %>
      <%= link_to 'Back', purchases_path, class: "btn btn-large" %>
    <% end %>
  </div>
</div>