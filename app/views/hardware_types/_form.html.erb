<div class="row">
  <div class="span6 offset3">
    <%= form_for(@hardware_type) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>

      <%= f.text_field :name %>

      <%= f.submit yield(:submit_button_text), class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>