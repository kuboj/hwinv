<div class="row">
  <div class="span6 offset3">
    <%= form_for(@position) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit yield(:button_text), class: "btn btn-large btn-primary" %>
      <%= link_to 'Back', positions_path, class: "btn btn-large" %>
    <% end %>
  </div>
</div>