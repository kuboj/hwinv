<% provide(:title, 'Keys') %>
<h1>Keys</h1>
<div class="row">
  <div class="span6 offset3">
    <table class='table table-hover'>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @keys.each do |key| %>
        <tr>
          <td><%= key.name %></td>
          <td>
            <% if current_user.admin? %>
              <%= render 'shared/edit_button',   path: edit_key_path(key) %>
              <%= render 'shared/delete_button', path: key_path(key) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <br />

    <% if current_user.admin? %>
      <%= render 'shared/new_button', path: new_key_path %>
    <% end %>
    <%= render 'shared/back_button', path: root_path %>
  </div>
</div>