<% provide(:title, 'Users') %>
<h1>Users</h1>
<div class="row">
  <div class="span8 offset2">
    <table class='table table-hover'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Privileges</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'admin' : 'user' %></td>
          <td>
            <% if current_user.admin? %>
              <%= render 'shared/delete_button', path: user_path(user) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <br />

    <%= render 'shared/back_button', path: root_path %>
  </div>
</div>