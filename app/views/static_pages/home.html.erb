<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Home</h3>
      </div>
    </div>
    <div class="row">
      <ul>
        <li><%= link_to 'Hardware types', hardware_types_path %></li>
      </ul>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to the HWinv</h1>
      <%= link_to "Sign up", signup_path,
                  class: "btn btn-large btn-primary" %>
    </div>
<% end %> 