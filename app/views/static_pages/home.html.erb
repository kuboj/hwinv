<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Home</h3>
      </div>
    </div>
    <div class="row">
      <ul>
        <% if current_user.admin? %>
          <li><%= link_to 'Users',      users_path %></li>
        <% end %>
        <li><%= link_to 'Datacenters',  datacenters_path %></li>
        <li><%= link_to 'Server racks', server_racks_path %></li>
        <li><%= link_to 'Rack units',   rack_units_path %></li>
        <li><%= link_to 'Locations',    locations_path %></li>
        <li><%= link_to 'Hardware',     hardwares_path %></li>
        <li><%= link_to 'Positions',    positions_path %></li>
        <li><%= link_to 'Purchases',    purchases_path %></li>
        <li><%= link_to 'Keys',         keys_path %></li>
        <li><%= link_to 'Parameters',   parameters_path %></li>

      </ul>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to the HWinv</h1>
      <%= link_to "Sign up", signup_path,
                  class: "btn btn-large btn-primary" %>
    </div>
<% end %> 