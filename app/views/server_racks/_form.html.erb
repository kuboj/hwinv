<div class="row">
  <div class="span6 offset3">
    <%= form_for([@datacenter, @server_rack]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <% if yield(:button_text) == 'Create' %>
        <%= f.label :rack_units_count %>
        <%= f.number_field :rack_units_count %>
      <% end %>
      <%= f.submit yield(:button_text), class: "btn btn-large btn-primary" %>
      <%= link_to 'Back', datacenter_server_racks_path(@datacenter), class: "btn btn-large" %>
    <% end %>
  </div>
</div>